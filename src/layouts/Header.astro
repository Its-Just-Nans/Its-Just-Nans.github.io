---
// import { ViewTransitions } from "astro:transitions";

const baseDesc = "The page of Its-Just-Nans aka n4n5. Here you can view my projects and get informations about me !";
interface AstroProps {
    title: string;
    description?: string;
}

const { title, desc = baseDesc } = Astro.props;
const img = "/cover.png";
const domain = "n4n5.dev";
const url = `https://${domain}`;
const key = "8qVBtr6GGGesE5nlacfO8rAmqBL9giPwr4FIouqVYO4";
const canonical = `https://${domain}${Astro.url.pathname}`;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>{title}</title>
<meta name="description" content={desc} />
<link rel="icon" href="/favicon.ico" />
<meta name="google-site-verification" content={key} />
<link rel="sitemap" href="/sitemap-index.xml" />
<link rel="sitemap" href="/sitemap.xml" />
<link rel="canonical" href={canonical} />
<meta property="og:url" content={url} />
<meta property="og:type" content="website" />
<meta property="og:title" content={title} />
<meta property="og:description" content={desc} />
<meta property="og:image" content={img} />

<meta name="twitter:card" content="summary_large_image" />
<meta property="twitter:domain" content={domain} />
<meta property="twitter:url" content={url} />

<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={desc} />
<meta name="twitter:image" content={img} />
