---
import type { InferGetStaticPropsType } from "astro";
import SimpleArticleSlug from "@components/SimpleArticleSlug.astro";
import { getStaticPathsWithFilter } from "@components/utils";

export const getStaticPaths = getStaticPathsWithFilter(({ frontmatter: { tags = [] } }) => tags.includes("school"));

type Props = InferGetStaticPropsType<typeof getStaticPaths>;

const { post } = Astro.props;
const { Content, frontmatter } = post;
---

<SimpleArticleSlug frontmatter={frontmatter}>
    <Content />
</SimpleArticleSlug>
