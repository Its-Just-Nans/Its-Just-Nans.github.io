---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ArticlesList from "../../components/ArticlesList.astro";

export async function getData() {
    const allPosts = await Astro.glob("/data/articles/**/*.mdx");
    const nonDraftPosts = allPosts.filter((post) => !post.frontmatter.draft);
    const sortedPosts = nonDraftPosts.sort(
        (a, b) =>
            new Date(b.frontmatter?.date || new Date()).getTime() -
            new Date(a.frontmatter?.date || new Date()).getTime()
    );
    return { sortedPosts, nbDraft: allPosts.length - nonDraftPosts.length };
}
const { sortedPosts: data, nbDraft } = await getData();
---

<BaseLayout>
    <ArticlesList articles={data} nbDraft={nbDraft} />
</BaseLayout>
