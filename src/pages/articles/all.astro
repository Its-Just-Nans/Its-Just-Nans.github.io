---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ArticlesList from "../../components/ArticlesList.astro";
import { getAllArticles } from "../../components/utils";

export async function getData() {
    const allPosts = await Astro.glob("/data/articles/**/*.mdx");
    return getAllArticles(allPosts);
}

const { articles, articlesDrafts } = await getData();
---

<BaseLayout title="All articles" description="Read all articles by n4n5">
    <ArticlesList articles={articles} drafts={articlesDrafts} />
</BaseLayout>
