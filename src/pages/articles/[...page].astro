---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ArticlesList from "../../components/ArticlesList.astro";

export async function getStaticPaths({ paginate }) {
    const allPosts = await Astro.glob("/data/articles/*.mdx");
    const nonDraftPosts = import.meta.env.DEV ? allPosts : allPosts.filter((post) => !post.frontmatter.draft);
    const nonHidden = import.meta.env.DEV ? nonDraftPosts : nonDraftPosts.filter((post) => !post.frontmatter.hidden);
    const sortedPosts = nonHidden.sort(
        (a, b) =>
            new Date(b.frontmatter.date || new Date()).getTime() - new Date(a.frontmatter.date || new Date()).getTime()
    );

    const a = paginate(sortedPosts, {
        pageSize: Infinity,
    });
    return a;
}
const { page } = Astro.props;
---

<BaseLayout>
    <ArticlesList articles={page.data} />
</BaseLayout>
