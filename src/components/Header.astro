---
import nav from "../pages.js";
import imgN4N5 from "../imgs/n4n5.png";
let menuIsOpen = false;
---

<header>
    <div class="title">
        <div class="titleContainer">
            <a href="/">
                <h1 class="frontTitle cursorPointer">Its-Just-Nans</h1>
            </a>
        </div>
        <div class="imgContainer" data-tooltip="Its-Just-Nans / n4n5">
            <a href="/">
                <img alt="logo-n4n5" class="cursorPointer" src={imgN4N5} />
            </a>
        </div>
    </div>
    <div class="space">
        <span class="smallMenu">
            <label for="checkboxMenu" class="smallMenuTitle">Menu</label>
            <input type="checkbox" id="checkboxMenu" />
            <span class="underSmallMenu">
                {
                    nav.map(({ route, name }, index) => (
                        <a href={route}>
                            <h2 class="menuLinks">{name}</h2>
                        </a>
                    ))
                }
            </span>
        </span>
    </div>
    <div class="navLinks">
        {
            nav.map(({ route, name }, index) => (
                <a href={route}>
                    <h2 class="menuLinks">{name}</h2>
                </a>
            ))
        }
    </div>
</header>

<style>
    .cursorPointer {
        cursor: pointer;
    }
    header {
        position: fixed;
        top: 0px;
        display: flex;
        margin: auto;
        width: 100vw;
        height: var(--header);
        z-index: 10;
        background-color: GAINSBORO;
        background-color: var(--globalColor);
        text-align: center;
        border-bottom: 1px solid black;
        font-family: system-ui;
        box-sizing: border-box;
    }
    .title {
        padding: 10px;
        flex: 0.35;
        border-right: 1px solid black;
        display: flex;
    }
    .titleContainer h1 {
        flex: 0.75;
        font-weight: 300;
        margin: 0px;
        margin-top: 5px;
    }
    .titleContainer {
        text-align: right;
        flex: 0.8;
    }
    .imgContainer {
        flex: 0.2;
        height: 100%;
        min-width: 0;
    }
    .imgContainer img {
        height: 100%;
    }

    :global(*) {
        font-family: monospace;
        --header: 60px;
    }
    .space {
        flex: 0.3;
    }
    .smallMenu {
        display: none;
    }
    .underSmallMenu {
        display: none;
    }
    #checkboxMenu {
        display: none;
    }
    .navLinks {
        display: flex;
        flex: 0.35;
        overflow-x: auto;
        padding: 10px 0px;
        border-left: 1px solid black;
    }
    .navLinks::-webkit-scrollbar {
        height: 10px;
    }
    .navLinks::-webkit-scrollbar-thumb {
        background: #888;
    }
    .navLinks::-webkit-scrollbar-thumb {
        background: #888;
    }
    :global(.navLinks a:first-child h2) {
        margin-left: 10px;
    }
    h2 {
        font-size: 1.2em;
        font-weight: 200;
        cursor: pointer;
    }
    label {
        font-size: 1.2em;
        font-weight: 200;
        cursor: pointer;
    }
    .menuLinks:hover {
        text-decoration: underline;
    }
    .navLinks .menuLinks {
        margin-right: 10px;
    }
    .smallMenuTitle {
        display: block;
        margin: 0px;
        padding-top: 20px;
    }
    .smallMenuTitle:hover {
        text-decoration: underline;
        text-decoration-style: dotted;
    }
    @media screen and (max-width: 1024px) {
        .title {
            border-right: none;
        }
        .title {
            flex: 0.8;
        }
        .frontTitle {
            font-size: 1.5em;
        }
        .imgContainer > img {
            height: 50%;
            margin-top: 10px;
        }
        .navLinks {
            display: none;
        }
        .smallMenu {
            display: block;
            min-height: 100%;
            background-color: var(--globalColor);
            border-bottom: 1px solid black;
            border-left: 1px solid black;
        }
        #checkboxMenu:checked ~ .underSmallMenu {
            display: block;
        }
    }
</style>
