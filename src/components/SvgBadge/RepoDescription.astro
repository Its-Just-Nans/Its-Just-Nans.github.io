---
interface Props {
    chunks: Array<string>;
}

const { chunks } = Astro.props;
---

<g data-testid="main-card-body" transform="translate(0, 55)">
    {
        chunks.map((oneChunk, i) => {
            const offset = chunks.length > 1 ? 5 : 20;
            return (
                <text class="description" x="25" y={(i - 1) * 20 + offset}>
                    <tspan dy="1.2em" x="25">
                        {oneChunk}
                    </tspan>
                </text>
            );
        })
    }
</g>

<style>
    .description * {
        font:
            400 13px "Segoe UI",
            Ubuntu,
            Sans-Serif;
        fill: #333;
    }
</style>
