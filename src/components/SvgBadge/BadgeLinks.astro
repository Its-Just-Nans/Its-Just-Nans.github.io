---
interface Props {
    url: string;
    homepageUrl: string;
    isRepo: boolean;
}

const { url, homepageUrl, isRepo } = Astro.props;
---

<a href={url} target="_blank" class="cursorPointer fill">
    <g transform="translate(25, 75)">
        <g transform="translate(0, 0)">
            <svg class="icon" x="0" y="-13" viewBox="0 0 38 38" version="1.1" width="16" height="16">
                <path
                    fill-rule="evenodd"
                    d="M18,1.4C9,1.4,1.7,8.7,1.7,17.7c0,7.2,4.7,13.3,11.1,15.5
                                c0.8,0.1,1.1-0.4,1.1-0.8c0-0.4,0-1.4,0-2.8c-4.5,1-5.5-2.2-5.5-2.2c-0.7-1.9-1.8-2.4-1.8-2.4c-1.5-1,0.1-1,0.1-1
                                c1.6,0.1,2.5,1.7,2.5,1.7c1.5,2.5,3.8,1.8,4.7,1.4c0.1-1.1,0.6-1.8,1-2.2c-3.6-0.4-7.4-1.8-7.4-8.1c0-1.8,0.6-3.2,1.7-4.4
                                c-0.2-0.4-0.7-2.1,0.2-4.3c0,0,1.4-0.4,4.5,1.7c1.3-0.4,2.7-0.5,4.1-0.5c1.4,0,2.8,0.2,4.1,0.5c3.1-2.1,4.5-1.7,4.5-1.7
                                c0.9,2.2,0.3,3.9,0.2,4.3c1,1.1,1.7,2.6,1.7,4.4c0,6.3-3.8,7.6-7.4,8c0.6,0.5,1.1,1.5,1.1,3c0,2.2,0,3.9,0,4.5
                                c0,0.4,0.3,0.9,1.1,0.8c6.5-2.2,11.1-8.3,11.1-15.5C34.3,8.7,27,1.4,18,1.4z"
                ></path>
            </svg>
        </g>
        <g transform="translate(25, 0)">
            <text class="hoverSvg" x="0" y="0">
                {!isRepo ? "View the Gist on GitHub" : "View the repository on GitHub"}
            </text>
        </g>
    </g>
</a>
{
    homepageUrl && (
        <a href={homepageUrl} target="_blank" class="cursorPointer fill">
            <g transform="translate(25, 100)">
                <g transform="translate(0, 0)">
                    <svg class="icon" x="0" y="-13" viewBox="0 0 24 24" version="1.1" width="16" height="16">
                        <path d="M19 3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.89-2-2-2zm0 16H5V7h14v12zm-5.5-6c0 .83-.67 1.5-1.5 1.5s-1.5-.67-1.5-1.5.67-1.5 1.5-1.5 1.5.67 1.5 1.5zM12 9c-2.73 0-5.06 1.66-6 4 .94 2.34 3.27 4 6 4s5.06-1.66 6-4c-.94-2.34-3.27-4-6-4zm0 6.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z" />
                    </svg>
                </g>
                <g transform="translate(25, 0)">
                    <text class="hoverSvg" x="0" y="0">
                        View the project
                    </text>
                </g>
            </g>
        </a>
    )
}

<style>
    .fill {
        fill: black;
    }
    .cursorPointer {
        cursor: pointer;
    }
    .hoverSvg:hover {
        font-weight: bold;
    }
</style>
