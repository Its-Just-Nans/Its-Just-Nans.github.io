---
interface Props {
    name: string;
    isPackage: boolean;
    isSchool: boolean;
    isPoc: boolean;
}

const { name, isPackage, isSchool, isPoc } = Astro.props;
---

<g data-testid="card-title" transform="translate(25, 35)">
    <g>
        <svg fill="#586069" x="0" y="-13" viewBox="0 0 16 16" version="1.1" width="16" height="16">
