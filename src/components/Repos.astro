---
//@ts-ignore
import output from "@data/projects/projects.json";
import packages from "@data/packages.json";
import SvgBadge from "@components/SvgBadge/SvgBadge.astro";
import type { SingleProject, PackageList } from "../scripts/types";
import { allBookmarked } from "../scripts/repoData";

const allPackagesName = (packages as unknown as PackageList)
    .map((onePlateform) =>
        onePlateform.list.map((onePackage) => {
            const packageLink = onePlateform.repos?.[onePackage];
            return packageLink?.split("/").pop() ?? onePackage;
        })
    )
    .flat();

type Selectors = Record<string, string>;
const DEFAULT_COLOR = "#000000";
const packageTag = "packages";
const schoolChecker = ["DUT R&T", "TP"];
const repoFilter = "🌐";

const filterProjects = ({ name, description }: SingleProject) => {
    if (!description) {
        console.log(`Project '${name}' doesn't have description !!`);
        return false;
    }
    const startWithGlobe = description.startsWith(repoFilter);
    if (startWithGlobe) {
        console.log(`Project is starting with ${repoFilter}: '${name}'`);
    }
    return !startWithGlobe;
};

//@ts-ignore
const typedOutput = output.filter(filterProjects).map((proj: SingleProject) => {
    const desc = proj.description ?? "";
    const isRepo = proj.url.startsWith("https://github.com");
    const isPackage = allPackagesName.includes(proj.name);
    const isBookmarked = desc.startsWith("🛠️");
    const isForceBookmark = allBookmarked.includes(proj.name);
    const isSchool = schoolChecker.some((oneCheck) => desc.startsWith(oneCheck));
    const isPoc = desc.startsWith("PoC");
    const isGist = !isRepo;
    const isUntagged = ![isPackage, isSchool, isPoc, isBookmarked, isGist].some((x) => x);
    return {
        ...proj,
        description: desc,
        isPackage,
        isBookmarked,
        isForceBookmark,
        isSchool,
        isPoc,
        isRepo,
        isGist,
        isUntagged,
    };
});

const cleanLang = (l: string) => {
    return l.replaceAll(" ", "-").replaceAll("+", "p").replaceAll(".", "");
};

const langs = typedOutput.reduce((acc, { primaryLanguage }) => {
    const { name: lang, color: lang_color } = primaryLanguage ? primaryLanguage : { name: "", color: "" };
    if (!lang) return acc;
    return { ...acc, [cleanLang(lang)]: lang_color ?? DEFAULT_COLOR };
}, {} as Selectors);

const projectTypes = ["poc", packageTag, "school", "bookmark"];
if (typedOutput.some(({ isUntagged }) => isUntagged)) {
    projectTypes.push("untagged");
}

const selectors: Selectors = {
    ...langs,
    ...projectTypes.reduce((acc, curr) => ({ ...acc, [curr]: DEFAULT_COLOR }), {}),
};

const rawStylesCSS = Object.entries(selectors)
    .map(([selectorName, color]) => {
        const l = cleanLang(selectorName.toLocaleLowerCase());
        return `
        #selector-${l}:checked ~ .selector-${l} {
            display: inline-block;
        }
        #selector-${l}:checked ~ details label.selector-${l} {
            border: 2px solid ${color};
        }`;
    })
    .join("\n");
---

<div>
    <style>
        .projectWrap {
            display: none;
        }
        #all-selector:checked ~ .projectWrap {
            display: inline-block;
        }
        #all-selector:checked ~ details label.all-selector {
            border: 2px solid black;
        }
        #no-lang:checked ~ .no-lang {
            display: inline-block;
        }
        #no-lang:checked ~ details label.no-lang {
            border: 2px solid black;
        }
    </style>
    <input id={`all-selector`} class="filters" name="selector-selector" type="radio" value={"all"} checked />
    {
        Object.entries(selectors).map(([selectorName, _color]) => {
            const l = selectorName.toLocaleLowerCase();
            return <input class="filters" id={`selector-${l}`} name="selector-selector" type="radio" value={l} />;
        })
    }
    <input id={`no-lang`} class="filters" name="selector-selector" type="radio" value={"no"} />
    <style set:html={rawStylesCSS}></style>
    <details>
        <summary title={`Filters on (${typedOutput.length}) repositories`}>Filters</summary>
        <label class:list={["selector-select", `all-selector`]} for={`all-selector`}>All</label>
        {
            Object.entries(selectors)
                .toSorted()
                .map(([selectorName, color]) => {
                    return (
                        <label
                            class:list={["selector-select", `selector-${cleanLang(selectorName.toLocaleLowerCase())}`]}
                            style={`color: ${color}`}
                            for={`selector-${cleanLang(selectorName.toLocaleLowerCase())}`}
                        >
                            {selectorName}
                        </label>
                    );
                })
        }
        <label class:list={["selector-select", `no-lang`]} for={`no-lang`}>Others-langs</label>
    </details>
    {
        typedOutput.map((oneData) => {
            const {
                isPackage,
                isSchool,
                isPoc,
                isUntagged,
                isBookmarked,
                isRepo,
                isForceBookmark,
                name,
                primaryLanguage,
            } = oneData;
            const langName = (primaryLanguage?.name ?? "").toLocaleLowerCase();
            if (import.meta.env.DEV) {
                if (isRepo && isUntagged) {
                    console.log(`'${name}' is not tagged`);
                }
            }
            return (
                <div
                    class:list={[
                        "projectWrap",
                        {
                            [`selector-${cleanLang(langName)}`]: langName !== "",
                            ["selector-poc"]: isPoc,
                            ["selector-school"]: isSchool,
                            [`selector-${packageTag}`]: isPackage,
                            ["selector-bookmark"]: isBookmarked,
                            ["selector-untagged"]: isUntagged,
                            "no-lang": !primaryLanguage,
                        },
                    ]}
                >
                    <div class="svgRepo">
                        <SvgBadge
                            svgData={oneData}
                            isPackage={isPackage}
                            isPoc={isPoc}
                            isSchool={isSchool}
                            isRepo={isRepo}
                            isBookmark={isBookmarked || isForceBookmark}
                        />
                    </div>
                </div>
            );
        })
    }
</div>

<style>
    details {
        cursor: pointer;
    }
    .selector-select {
        margin: 5px;
        cursor: pointer;
        font-weight: bold;
        padding: 2px;
        border-radius: 5px;
        display: inline-block;
    }
    .filters {
        display: none;
    }

    .projectHelp rect {
        fill: var(--globalColor);
    }
    .projectHelp > svg {
        display: block;
    }
    article {
        padding-left: 10vw !important;
        padding-right: 10vw !important;
    }
    .projectsDiv > svg {
        display: block;
        height: 100% !important;
        width: 100%;
    }
    .projectHelp a:hover text {
        color: blue;
    }
    .svgRepoHovered {
        display: none;
    }
    .projectWrap {
        display: inline-block;
        margin: 10px 10px 0px 10px;
        text-align: center;
        vertical-align: bottom;
        border-radius: 5px;
        transition: box-shadow 0.25s;
    }
    @media only screen and (max-width: 600px) {
        .projectsDiv {
            width: calc(100% - 20px);
        }
    }

    .clicked > div {
        box-shadow: 0px 0px 0px 5px var(--globalColor);
    }

    .projectWrap:hover {
        box-shadow: 0px 0px 0px 5px var(--globalColor);
    }
    .cursorPointer {
        cursor: pointer;
    }
</style>
